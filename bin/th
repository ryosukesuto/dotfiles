#!/usr/bin/env bash
# ============================================================================
# th - Obsidianãƒ‡ã‚¤ãƒªãƒ¼ãƒãƒ¼ãƒˆè¨˜éŒ²ãƒ„ãƒ¼ãƒ«
# ============================================================================
# ã‚¹ã‚¿ãƒ³ãƒ‰ã‚¢ãƒ­ãƒ³ç‰ˆã®thé–¢æ•°ã€‚source ~/.zshrcãªã—ã§å®Ÿè¡Œå¯èƒ½ã€‚

# ä½¿ç”¨æ–¹æ³•ã®ç¢ºèª
if [[ -z "$1" ]]; then
    echo "ä½¿ç”¨æ–¹æ³•: th <ãƒ¡ãƒ¢å†…å®¹>"
    exit 1
fi

# è¨­å®š
vault_path="$HOME/src/github.com/ryosukesuto/obsidian-notes"
today=$(date +%Y-%m-%d)
daily_note="$vault_path/01_Daily/${today}.md"
timestamp=$(date "+%Y/%m/%d %H:%M:%S")

# Vaultãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®å­˜åœ¨ç¢ºèª
if [[ ! -d "$vault_path" ]]; then
    echo "ã‚¨ãƒ©ãƒ¼: Obsidian vaultãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“: $vault_path"
    exit 1
fi

# 01_Dailyãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ä½œæˆï¼ˆå­˜åœ¨ã—ãªã„å ´åˆï¼‰
if [[ ! -d "$vault_path/01_Daily" ]]; then
    mkdir -p "$vault_path/01_Daily"
fi

# ãƒ‡ã‚¤ãƒªãƒ¼ãƒãƒ¼ãƒˆãŒå­˜åœ¨ã—ãªã„å ´åˆã¯ä½œæˆ
if [[ ! -f "$daily_note" ]]; then
    echo "# ${today}" > "$daily_note"
    echo "" >> "$daily_note"
    echo "## ğŸ“ ãƒ¡ãƒ¢" >> "$daily_note"
fi

# ãƒ¡ãƒ¢ã‚»ã‚¯ã‚·ãƒ§ãƒ³ãŒå­˜åœ¨ã—ãªã„å ´åˆã¯è¿½åŠ 
if ! command -v rg &> /dev/null; then
    # rgãŒåˆ©ç”¨ã§ããªã„å ´åˆã¯grepã‚’ä½¿ç”¨
    if ! grep -q "^## ğŸ“ ãƒ¡ãƒ¢" "$daily_note"; then
        echo "" >> "$daily_note"
        echo "## ğŸ“ ãƒ¡ãƒ¢" >> "$daily_note"
    fi
else
    if ! rg -q "^## ğŸ“ ãƒ¡ãƒ¢" "$daily_note"; then
        echo "" >> "$daily_note"
        echo "## ğŸ“ ãƒ¡ãƒ¢" >> "$daily_note"
    fi
fi

# æ–°ã—ã„ãƒ¡ãƒ¢ã‚’è¿½åŠ 
new_memo="- ${timestamp}: $*"
temp_file="${daily_note}.tmp"
in_memo_section=0
memo_added=0
last_memo_line=0
line_num=0

# ãƒ¡ãƒ¢ã‚»ã‚¯ã‚·ãƒ§ãƒ³ã®æœ€å¾Œã‚’è¦‹ã¤ã‘ã‚‹
while IFS= read -r line; do
    ((line_num++))
    if [[ "$line" == "## ğŸ“ ãƒ¡ãƒ¢" ]]; then
        in_memo_section=1
    elif [[ $in_memo_section -eq 1 ]]; then
        if [[ "$line" =~ ^-[[:space:]] ]]; then
            last_memo_line=$line_num
        elif [[ "$line" =~ ^##[[:space:]] ]] || [[ -z "$line" && $last_memo_line -gt 0 ]]; then
            in_memo_section=0
        fi
    fi
done < "$daily_note"

# ãƒ¡ãƒ¢ã‚’é©åˆ‡ãªä½ç½®ã«æŒ¿å…¥
if [[ $last_memo_line -gt 0 ]]; then
    awk -v line="$last_memo_line" -v memo="$new_memo" 'NR==line{print; print memo; next} 1' "$daily_note" > "$temp_file"
else
    awk -v memo="$new_memo" '/^## ğŸ“ ãƒ¡ãƒ¢$/{print; print memo; next} 1' "$daily_note" > "$temp_file"
fi

/bin/mv -f "$temp_file" "$daily_note"
echo "âœ… ãƒ¡ãƒ¢ã‚’è¿½åŠ ã—ã¾ã—ãŸ: $*"