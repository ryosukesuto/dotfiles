# ==============================================================================
# Readline設定
# ~/.inputrc としてシンボリックリンクされる
# ==============================================================================

# ------------------------------------------------------------------------------
# 基本設定
# ------------------------------------------------------------------------------
# 大文字小文字を区別しない補完
set completion-ignore-case on

# ハイフンとアンダースコアを同等に扱う
set completion-map-case on

# 補完時に共通プレフィックスを即座に表示
set show-all-if-ambiguous on

# 補完候補が複数ある場合、最初のTabで一覧表示
set show-all-if-unmodified on

# 補完候補にタイプを表示（ディレクトリには/、実行ファイルには*など）
set visible-stats on

# 補完候補に色を付ける
set colored-stats on

# 補完候補をマークアップ（太字、下線など）
set colored-completion-prefix on

# ------------------------------------------------------------------------------
# 履歴検索
# ------------------------------------------------------------------------------
# 履歴検索を有効化（上下キーで部分一致検索）
"\e[A": history-search-backward
"\e[B": history-search-forward

# Ctrl+P/Nでも履歴検索（Emacsスタイル）
"\C-p": history-search-backward
"\C-n": history-search-forward

# ------------------------------------------------------------------------------
# 編集モード
# ------------------------------------------------------------------------------
# Emacsモードを使用（デフォルト）
# Viモードを使いたい場合は以下をコメント解除
# set editing-mode vi
# set keymap vi-command

# ------------------------------------------------------------------------------
# その他の便利な設定
# ------------------------------------------------------------------------------
# ベルを鳴らさない
set bell-style none

# 8ビット文字を有効化（UTF-8対応）
set input-meta on
set output-meta on
set convert-meta off

# 補完時にページャーを使用しない（候補が多い場合でも一覧表示）
set page-completions off

# 単語の区切り文字を設定
set bind-tty-special-chars on
