# Brewfile - dotfiles依存ツール
# Usage: brew bundle install --file=Brewfile

# Taps
tap "homebrew/cask-fonts"

# ===== 必須 =====
brew "git"
brew "zsh"
brew "tmux"
brew "gh"
brew "fzf"
brew "direnv"

# ===== 推奨（CLI強化） =====
brew "eza"           # ls代替
brew "bat"           # cat代替
brew "ripgrep"       # grep代替
brew "fd"            # find代替
brew "jq"            # JSON処理
brew "ghq"           # リポジトリ管理

# ===== バージョン管理 =====
brew "mise"

# ===== IaCツール =====
brew "tflint"        # Terraform linter
brew "trivy"         # セキュリティスキャナ
brew "kubeconform"   # K8sマニフェスト検証

# ===== フォント =====
cask "font-udev-gothic-nf"

# ===== ターミナル（オプション） =====
