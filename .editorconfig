# ==============================================================================
# EditorConfig
# プロジェクト横断で一貫したコーディングスタイルを適用
# https://editorconfig.org/
# ==============================================================================

# トップレベルのEditorConfig（上位ディレクトリの設定を探さない）
root = true

# ------------------------------------------------------------------------------
# 全ファイル共通設定
# ------------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ------------------------------------------------------------------------------
# シェルスクリプト
# ------------------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black formatter default

# ------------------------------------------------------------------------------
# JavaScript / TypeScript
# ------------------------------------------------------------------------------
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# YAML
# ------------------------------------------------------------------------------
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# Terraform
# ------------------------------------------------------------------------------
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# Markdown
# ------------------------------------------------------------------------------
[*.md]
indent_style = space
indent_size = 2
# Markdownでは末尾スペースが意味を持つ場合がある（改行）
trim_trailing_whitespace = false

# ------------------------------------------------------------------------------
# Makefile
# ------------------------------------------------------------------------------
[Makefile]
indent_style = tab

# ------------------------------------------------------------------------------
# Go
# ------------------------------------------------------------------------------
[*.go]
indent_style = tab
indent_size = 4

# ------------------------------------------------------------------------------
# HTML / CSS / SCSS
# ------------------------------------------------------------------------------
[*.{html,css,scss,sass,less}]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# Ruby
# ------------------------------------------------------------------------------
[*.rb]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# SQL
# ------------------------------------------------------------------------------
[*.sql]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# TOML
# ------------------------------------------------------------------------------
[*.toml]
indent_style = space
indent_size = 2

# ------------------------------------------------------------------------------
# XML
# ------------------------------------------------------------------------------
[*.xml]
indent_style = space
indent_size = 2
