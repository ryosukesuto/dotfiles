  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '⚠️ 新規作成前に確認: 既存ファイルの編集ではダメですか？'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f package.json ] && grep -q '\"lint\"' package.json 2>/dev/null; then npm run lint --silent 2>/dev/null || true; fi",
            "timeout": 120,
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/s32943/gh/github.com/ryosukesuto/dotfiles/bin/claude-commit-log"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -subtitle 'ツール失敗' -message 'ツール実行に失敗しました' -sound Basso"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -subtitle '処理終了' -message 'タスクが完了しました' -sound Hero"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -subtitle '確認待ち' -message '許可を求めています' -sound Glass"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx --bun @owloops/claude-powerline@latest --theme=tokyo-night --style=powerline"
  },
  "outputStyle": "Concise",
  "language": "japanese",
  "skipDangerousModePermissionPrompt": true,
  "showTurnDuration": true,
  "effortLevel": "medium"
}
